<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linear1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="179dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right|center_vertical"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/TC"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="C"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TDEL"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="DEL"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TS"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TA"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="/"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/T7"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/T8"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/T9"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TX"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="X"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/T4"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/T5"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/T6"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TDE"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="-"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/T1"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/T2"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/T3"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TP"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="+"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/T0"
                android:layout_width="105dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/TML"
                android:layout_width="4dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/TL"
                android:layout_width="2dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="="
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>